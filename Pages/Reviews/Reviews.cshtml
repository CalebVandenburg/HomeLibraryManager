@page
@model HomeLibraryManager.Pages.Reviews.ReviewsModel
<table class="table" id="bookListTable">
    <thead>
        <tr>
            <th>
                Book Title
            </th>
            <th>
                Review Title
            </th>
            <th>
                Review Score
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Reviews != null && Model.Reviews.Count() > 0)
        {
            @foreach (var item in Model.Reviews)
            {
                <tr>
                    <td  onclick="location.href='/Library/Book?id=@item.Book.BookId'">
                        <u>@Html.DisplayFor(modelItem => item.Book.Title)</u>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Score)
                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>