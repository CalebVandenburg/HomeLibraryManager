@page
@model HomeLibraryManager.Pages.Reviews.ReviewModel

@{
    ViewData["Title"] = "Review";
}
<div id="reviewDetailContainer">
    <div id="left">
            <h1>@Model.Review.Book.Title Review</h1>
        @*icons that arent thumbnails dont accurately reflect book*@
        @if (Model.Review.Book.Thumbnail != null)
        {
            <img src="@Model.Review.Book.Thumbnail" />
        }
        else
        {
            <img src="@Model.Review.Book.SmallThumbnail" />
        }
    </div>
    <div id="right">
        <form method="post">
            <input type="hidden" name="ReviewId" value="@Model.Review.ReviewId">
            <span><label for="Title">Review Title </label><input value="@Model.Review.Title" class="form-control" id="Title" name="Title" /></span>
            <span><label for="Title">Score </label><input value="@Model.Review.Score" class="form-control" id="Score" name="Score" /></span>
            <span><label for="Text">Text </label><textarea class="form-control" id="EditionNotes" name="Text">@Model.Review.Text</textarea></span>
            <span><input asp-page-handler="Review" type="submit" value="Save" class="btn btn-success" name="" /></span>
            <span><input asp-page-handler="Delete" type="submit" value="Delete" class="btn btn-success" name="" /></span>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
